
<%= form_for @recipe do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    
    <%= f.fields_for :ingredients do |inner_f|%>
        <%= inner_f.label :name %> 
        <%= inner_f.text_field :name %> <br>

        <%= inner_f.label :quantity %> 
        <%= inner_f.text_field :quantity %> <br>
    <% end %>
    <%= f.submit%>
<% end %> 

  
